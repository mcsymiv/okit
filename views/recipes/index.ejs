<% layout('layouts/boilerplate') -%>

    <div>
        <h1>Recipes</h1>
    </div>
    <div class="recipes-grid">
        <% recipes.forEach((recipe)=>{ %>
            <div class="recipe-card" style="background-image: url('<% if(recipe.images[0]){ %><%= recipe.images[0].url %><% } %>');">
                <div class="recipe__info">
                    <div class="recipe__info--title">
                        <%= recipe.title %>
                    </div>
                    <div class="recipe__info--date">
                        <i>created</i> <%= recipe.date.toDateString() %>
                    </div>
                    <div class="recipe__info--description">
                        <%= recipe.description %>
                    </div>
                    <div class="recipe__info--more">
                        <a href="/recipes/<%= recipe._id %>" class="btn btn-secondary fix recipe__info--more-btn">View more</a>
                    </div>
                </div>
                <div class="recipe-bg"></div>
            </div>
        <% }) %>
    </div>

