<%- include("../partials/header") %>

    <div>
        <h1>Recipes</h1>
        <div>
            <a href="./new">Create Recipe</a>
        </div>
    </div>
    <% recipes.forEach((recipe)=>{ %>
        <div>
            <%= recipe.title %> - <i>created</i> <%= recipe.date.toDateString() %>
        </div>
        <%= recipe.description %>
        <a href="<%= recipe._id %>">View more</a>
    <% }) %>

<%- include("../partials/footer") %>